<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/caramel"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/model1"
        android:textSize="@dimen/medium"
        android:textColor="@color/gray"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вместительная сумка-хобо"
        android:textColor="@color/black"
        android:layout_below="@+id/text" />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="– натуральная замша"
        android:textColor="@color/black"
        android:layout_below="@+id/text2" />
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="– цвет фурнитуры: золото"
        android:textColor="@color/black"
        android:layout_below="@+id/text3" />
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="– закрывается на молнию"
        android:textColor="@color/black"
        android:layout_below="@+id/text4" />
    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="– внутри карман на молнии и 2 кармана без молнии"
        android:textColor="@color/black"
        android:layout_below="@+id/text5" />
    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="– ремень регулируется, что позволяет носить ее на плече и через плечо"
        android:textColor="@color/black"
        android:layout_below="@+id/text6" />
    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ДxШxВ: 380x150x200 мм"
        android:textColor="@color/black"
        android:layout_below="@+id/text7" />
    <Button
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/knopka1"
        android:textColor="@color/pink"
        android:layout_below="@+id/text8" />
    <Button
        android:id="@+id/nazad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Назад"
        android:textColor="@color/pink"
        android:layout_below="@+id/bottom" />
</RelativeLayout>